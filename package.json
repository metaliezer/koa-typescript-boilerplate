{
    "name": "koa-typescript-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "npm run serve NODE_ENV=production",
        "serve": "node --harmony --max-http-header-size=262144 dist/index.js",
        "build": "tsc",
        "watch:node": "nodemon --harmony dist/index.js",
